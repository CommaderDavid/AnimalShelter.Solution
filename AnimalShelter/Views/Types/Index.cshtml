@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;
@model List<AnimalShelter.Models.AnimalType>;

<h1>Animals in the shelter</h1>

<ul>
  @foreach(AnimalType item in Model)
  {
    <li>@Html.ActionLink($"{item.Name}, {item.Type}", "Details", new { id = item.ItemId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new item", "Create")</p>